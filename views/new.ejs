<%- include("partials/header.ejs") %>

<div class="container mt-5">
    <div class="row justify-content-center">
        <h1>Dodaj Nowy Post</h1>
    </div>
    <div class="row">
        <div id="newEditForm">
            <form action="/games" method="POST">
                <div class="form-group">
                    <label>Tytuł:</label>
                    <input class="form-control" type="text" name="title" placeholder="Tytuł" required>
                </div>
                <div class="form-group">
                    <label>Miniaturka:</label>
                    <input class="form-control" type="text" name="screenshot" placeholder="URL Miniaturki" required>
                </div>
                <div class="form-group">
                    <label>Tekst:</label>
                    <textarea class="summernote form-control" name="review" placeholder="Napisz coś..." required></textarea>
                </div>
                <button class="btn btn-primary">Utwórz</button>
                <a href="/games" id="goBackLink">Powrót</a>
            </form>
        </div>
    </div>
</div>


<%- include("partials/footer.ejs") %>