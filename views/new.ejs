<%- include("partials/header.ejs") %>

<div class="container mt-5">
    <div class="row justify-content-center">
        <h1>Create New Post</h1>
    </div>
    <div class="row">
        <div id="newEditForm">
            <form action="/games" method="POST">
                <div class="form-group">
                    <label>Title</label>
                    <input class="form-control" type="text" name="title" placeholder="Title" required>
                </div>
                <div class="form-group">
                    <label>Thumbnail</label>
                    <input class="form-control" type="text" name="screenshot" placeholder="Thumbnail URL" required>
                </div>
                <div class="form-group">
                    <label>Review</label>
                    <textarea class="summernote form-control" name="review" placeholder="Write something here..." required></textarea>
                </div>
                <button class="btn btn-primary">Submit</button>
                <a href="/games" id="goBackLink">Go Back</a>
            </form>
        </div>
    </div>
</div>


<%- include("partials/footer.ejs") %>