<%- include("partials/header.ejs") %>

<div class="container mt-5">
    <div class="row justify-content-center">
        <h1 class="textCenter">Edycja: <%= game.title %> Post</h1>
    </div>
    <div class="row">
        <div id="newEditForm">
            <form action="/games/<%= game._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <label>Tytuł:</label>
                    <input class="form-control" type="text" name="title" placeholder="Tytył" value="<%= game.title %>" required>
                </div>
                <div class="form-group">
                    <label>Miniaturka:</label>
                    <input class="form-control" type="text" name="screenshot" placeholder="URL Miniaturki" value="<%= game.screenshot %>" required>
                </div>
                <div class="form-group">
                    <label>Tekst:</label>
                    <textarea class="summernote form-control" name="review" placeholder="Napisz coś..." required><%= game.review %></textarea>
                </div>
                <button class="btn btn-primary">Potwierdź</button>
                <a class="btn btn-outline-secondary" href="/games/<%= game._id %>" id="goBackLink">Powrót</a>
            </form>
        </div>
    </div>
</div>


<%- include("partials/footer.ejs") %>