<%- include("partials/header.ejs") %>

<div class="container mt-5">
    <div class="row justify-content-center">
        <h1 class="textCenter">Edit <%= game.title %> Post</h1>
    </div>
    <div class="row">
        <div id="newEditForm">
            <form action="/games/<%= game._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <label>Title</label>
                    <input class="form-control" type="text" name="title" placeholder="Title" value="<%= game.title %>" required>
                </div>
                <div class="form-group">
                    <label>Screenshot</label>
                    <input class="form-control" type="text" name="screenshot" placeholder="Screenshot URL" value="<%= game.screenshot %>" required>
                </div>
                <div class="form-group">
                    <label>Review</label>
                    <textarea id="summernote" class="form-control" name="review" placeholder="Write something here..." required><%= game.review %></textarea>
                </div>
                <button class="btn btn-primary">Submit</button>
                <a href="/games/<%= game._id %>" id="goBackLink">Go Back</a>
            </form>
        </div>
    </div>
</div>


<%- include("partials/footer.ejs") %>