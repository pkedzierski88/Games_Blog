<%- include("partials/header.ejs") %>

<div class="container mt-5 pt-5">
    <div class="row justify-content-center">
        <h1>Zarejestruj Się</h1>
    </div>
    <div class="row justify-content-center mt-2">
        <div class="col-9 col-sm-10 col-md-8 col-lg-6">
            <form action="/register" method="POST">
                <div class="form-group">
                    <label>Nazwa Użytkownika:</label>
                    <input class="form-control" type="text" name="username" placeholder="Nazwa Użytkownika" required>
                </div>
                <div class="form-group">
                    <label>Hasło:</label>
                    <input class="form-control" type="password" name="password" placeholder="Hasło" required>
                </div>
                <button id="bottomButtons" class="btn btn-primary">Potwierdź</button>
                <a class="btn btn-outline-secondary" href="/games" id="goBackLink">Powrót</a>
            </form>
        </div>
    </div>
</div>


<%- include("partials/footer.ejs") %>